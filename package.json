{
  "name": "@lightdotso/api",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/LightDotSo/api",
  "bugs": {
    "url": "https://github.com/LightDotSo/api/issues"
  },
  "repository": "https://github.com/LightDotSo/api",
  "license": "UNLICENSED",
  "author": "Light, Inc.",
  "main": "dist/worker.js",
  "scripts": {
    "build": "pnpm run clean && pnpm run prisma:cp && pnpm run prisma:generate && pnpm run next:build || pnpm run nest:build",
    "build:cache": "webpack -c webpack.cache.js",
    "build:image": "webpack -c webpack.image.js",
    "clean": "rimraf -rf ./dist",
    "cypress:ci": "cypress run --record",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "dev": "next dev",
    "dev:cache": "miniflare --watch -c wrangler.cache.toml",
    "dev:image": "miniflare --watch -c wrangler.image.toml",
    "env:local": "doppler secrets download --no-file --format env > .env.local",
    "env:prisma": "doppler secrets download --no-file --format env > prisma/.env",
    "env:vercel": "vercel pull --env .env.local",
    "eslint:cmd": "cd ../.. && pnpm run eslint:cmd",
    "eslint:fix": "cd ../.. && pnpm run eslint:fix",
    "eslint:lint": "cd ../.. && pnpm run eslint:lint",
    "fix": "cd ../.. && pnpm run fix",
    "prepare": "husky install",
    "prisma:cp": "cp ../../packages/prisma/schema.prisma prisma/schema.prisma",
    "prisma:db:push": "prisma db push",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "restore": "git restore . --recurse-submodules",
    "nest:build": "nest build -p tsconfig.nest.json",
    "nest:dev": "nest start -p tsconfig.nest.json --watch",
    "nest:start": "nest start -p tsconfig.nest.json",
    "next:build": "next build",
    "next:dev": "next dev",
    "next:start": "next start",
    "prettier:cmd": "prettier",
    "prettier:fix": "prettier --write .",
    "prettier:lint": "prettier --check .",
    "npm-package-json:lint": "npmPkgJsonLint .",
    "start": "pnpm run next:start"
  },
  "dependencies": {
    "@ethersproject/abstract-provider": "^5.7.0",
    "@ethersproject/address": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
    "@lightdotso/const": "workspace:*",
    "@lightdotso/queries": "workspace:*",
    "@lightdotso/services": "workspace:*",
    "@lightdotso/types": "workspace:*",
    "@prisma/client": "^4.2.1",
    "@sentry/integrations": "^7.11.1",
    "@sentry/nextjs": "^7.11.1",
    "ethers": "^5.7.0",
    "ethers-multicall": "^0.2.3",
    "graphql": "^16.6.0",
    "next": "^12.2.5",
    "next-compose-plugins": "^2.2.1",
    "prisma": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "worktop": "0.8.0-next.14",
    "zod": "^3.18.0",
    "zod-prisma": "^0.5.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@cloudflare/wrangler": "^1.19.12",
    "@cypress/react": "^6.1.1",
    "@nestjs/cli": "^9.1.1",
    "@testing-library/cypress": "^8.0.3",
    "@types/react": "^18.0.17",
    "cypress": "^10.6.0",
    "miniflare": "^2.7.1",
    "ts-loader": "^9.3.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
